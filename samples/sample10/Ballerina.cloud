[container.image]
repository= "choreoctrlplane.azurecr.io/choreoipaas" # optional default is local
name="linker" # optional
tag="v0.1.1"  # default is latest
base="openjdk:slim"
run_as="ballerina" # optional. Default is ballerina

# This section specifies deployment related requirements
[cloud]
#This section contains the configs required
    [cloud.config]
    # Simple KV pairs
    FOO="value1"
    BAR="value2"
    # Config files which will be mounted
    [cloud.config.files]
        [cloud.config.files.ballerina.conf] # optional
            file="resource/ballerina.conf"
        [cloud.config.files.application1]  # optional
            file="resource/application1.properties"
            mount_path="/home/ballerina/foo/app1.properties"
        [cloud.config.files.application2]  # optional
            file="resource/application2.properties"
            mount_path="/home/ballerina/bar/app2.properties"

[cloud.deployment]
replicas=3
    [cloud.deployment.autoscaling]
        min_replicas=2
        max_replicas=3
        cpu=50
    [cloud.deployment.probes]
        [cloud.deployment.probes.readiness]
            port=9091
            path="/readyz"
        [cloud.deployment.probes.liveness]
            port=9091
            path="/healthz"
